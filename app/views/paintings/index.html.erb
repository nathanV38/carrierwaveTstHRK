<h1>Painting Gallery</h1>


<% @paintings.each do |p| %>
	<tr>
		<td><%#= "/uploads"+url_for(p)+"/image.jpg" %></td>
		<td><%#= painting_url(p) %></td>
		
		<%#= link_to(image_tag("photo a loader" , :title => "ok"), a.to_s , :class => "grouped_images", :rel => "group1") %>
		<td><%#= link_to(image_tag(p.image.url(:thumb) , :title => "ok"), p.image.url(:thumb).to_s, :class => "grouped_images", :rel => "group1") %></td>
		<%#= p.name %>
		<%#= p.image %>
		<%#= a.to_s %>
		
		
		<td>
		<% if p.image_url(:big) %>
			<%= link_to(image_tag(p.image.url(:thumb) , :title => "ok"), p.image.url(:big).to_s, :class => "grouped_images", :rel => "group1") %>
		<% else %>
			<%= link_to(image_tag(p.image.url(:thumb) , :title => "ok"), p.image.url(:thumb).to_s, :class => "grouped_images", :rel => "group1") %>
		<% end %>
		</td>
		
	</tr>
<% end %>



<%= form_for Painting.new do |f| %>
	<%= f.label :image, "Envoyer les peintures :" %>
	<%= f.file_field :image, multiple: true, name: "painting[image]" %>
<% end %>


<script id="template-upload" type="text/x-tmpl">
<div class="upload">
  {%=o.name%}
  <div class="progress"><div class="bar" style="width: 0%;"></div></div>
</div>
</script>



